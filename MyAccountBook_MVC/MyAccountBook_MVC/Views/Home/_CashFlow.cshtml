@model IEnumerable<MyAccountBook_MVC.Models.AccountItemClass>

<div class="col-md-12">
    <table class="table table-bordered table-hover">
        <tr>
            <th>#</th>
            <th>類別</th>
            <th>日期</th>
            <th>金額</th>
        </tr>
        @{
           var i = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>@item.Type</td>
                <td>@item.AccountDate.ToShortDateString()</td>
                <td>@item.Payment</td>
            </tr>
           
            
        }
    </table>
</div>
    

